{
  "templates": [
    {
      "id": "SSH1",
      "title": "SSH1 - Kiểm tra disable root SSH login",
      "command": "grep -i '^PermitRootLogin' /etc/ssh/sshd_config | awk '{print $2}'"
    },
    {
      "id": "SSH2", 
      "title": "SSH2 - Kiểm tra SSH port",
      "command": "grep -i '^Port' /etc/ssh/sshd_config | awk '{print $2}'"
    },
    {
      "id": "SSH3",
      "title": "SSH3 - Kiểm tra SSH protocol version",
      "command": "grep -i '^Protocol' /etc/ssh/sshd_config | awk '{print $2}'"
    },
    {
      "id": "SYS1",
      "title": "SYS1 - Kiểm tra OS version",
      "command": "cat /etc/os-release | grep '^PRETTY_NAME' | cut -d'\"' -f2"
    },
    {
      "id": "SYS2",
      "title": "SYS2 - Kiểm tra kernel version",
      "command": "uname -r"
    },
    {
      "id": "SYS3",
      "title": "SYS3 - Kiểm tra uptime",
      "command": "uptime | awk '{print $3,$4,$5}'"
    },
    {
      "id": "NET1",
      "title": "NET1 - Kiểm tra network interfaces",
      "command": "ip addr show | grep '^[0-9]' | awk '{print $2}' | cut -d':' -f1"
    },
    {
      "id": "NET2",
      "title": "NET2 - Kiểm tra listening ports",
      "command": "netstat -tlnp | grep LISTEN | awk '{print $4}'"
    },
    {
      "id": "NET3",
      "title": "NET3 - Kiểm tra firewall status",
      "command": "systemctl status firewalld | grep Active | awk '{print $2}'"
    },
    {
      "id": "DISK1",
      "title": "DISK1 - Kiểm tra disk usage",
      "command": "df -h | grep '^/dev' | awk '{print $5}'"
    },
    {
      "id": "DISK2",
      "title": "DISK2 - Kiểm tra inode usage",
      "command": "df -i | grep '^/dev' | awk '{print $5}'"
    },
    {
      "id": "MEM1",
      "title": "MEM1 - Kiểm tra memory usage",
      "command": "free -h | grep '^Mem:' | awk '{print $3}'"
    },
    {
      "id": "MEM2",
      "title": "MEM2 - Kiểm tra swap usage",
      "command": "free -h | grep '^Swap:' | awk '{print $3}'"
    },
    {
      "id": "PROC1",
      "title": "PROC1 - Kiểm tra running processes count",
      "command": "ps aux | wc -l"
    },
    {
      "id": "PROC2",
      "title": "PROC2 - Kiểm tra top 5 processes by CPU",
      "command": "ps aux | sort -nr -k 3 | head -5 | awk '{print $11}'"
    },
    {
      "id": "SERV1",
      "title": "SERV1 - Kiểm tra running services",
      "command": "systemctl list-units --type=service --state=running | grep '.service' | wc -l"
    },
    {
      "id": "SERV2",
      "title": "SERV2 - Kiểm tra failed services",
      "command": "systemctl list-units --type=service --state=failed | grep '.service' | wc -l"
    },
    {
      "id": "USER1",
      "title": "USER1 - Kiểm tra user accounts",
      "command": "cat /etc/passwd | wc -l"
    },
    {
      "id": "USER2",
      "title": "USER2 - Kiểm tra sudo users",
      "command": "grep -Po '^sudo.+:\\K.*$' /etc/group | tr ',' '\\n' | wc -l"
    },
    {
      "id": "LOG1",
      "title": "LOG1 - Kiểm tra recent login attempts",
      "command": "tail -20 /var/log/auth.log | grep 'Failed password' | wc -l"
    }
  ]
} 